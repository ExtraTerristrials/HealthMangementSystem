<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorBlack"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">
        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:id="@+id/bmi"
            android:focusable="false"
            android:clickable="false"
            android:layout_alignParentTop="true"
            android:background="@drawable/edit_text_background"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:weightSum="3">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="BMI"
                android:clickable="false"
                android:textSize="30sp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:id="@+id/edit_bmi"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:textSize="30sp"
                android:clickable="false"
                android:textAlignment="center"
                android:textColor="@color/colorRed"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorGray"
                android:textAlignment="center"
                android:clickable="false"
                android:textStyle="italic"
                android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:id="@+id/calori"
            android:orientation="vertical"
            android:background="@drawable/edit_text_background"
            android:layout_below="@+id/bloodGroup"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:focusable="false"
            android:clickable="false"
            android:layout_marginTop="5dp"
            android:weightSum="3">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorBlack"
                android:textAlignment="center"
                android:clickable="false"
                android:text="CALORI"
                android:textStyle="bold"
                android:textSize="30sp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorRed"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:id="@+id/edit_calori"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="30sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorGray"
                android:textAlignment="center"
                android:textStyle="italic"
                android:clickable="false"
                android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:id="@+id/weight"
            android:layout_below="@id/calori"
            android:layout_alignParentRight="true"
            android:background="@drawable/edit_text_background"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:focusable="false"
            android:clickable="false"
            android:orientation="vertical"
            android:weightSum="3">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorBlack"
                android:textAlignment="center"
                android:clickable="false"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text="WEIGHT"
                android:background="@color/colorPrimaryDark"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorRed"
                android:textAlignment="center"
                android:textStyle="bold"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:id="@+id/edit_weight"
                android:clickable="false"
                android:textSize="30sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorGray"
                android:textAlignment="center"
                android:textStyle="italic"
                android:clickable="false"
                android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:id="@+id/bloodGroup"
            android:background="@drawable/edit_text_background"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:focusable="false"
            android:clickable="false"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:weightSum="3">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textAlignment="center"
                android:clickable="false"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text="B.G"
                android:background="@color/colorPrimaryDark"
                android:layout_weight="1"/>
            <EditText
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:textSize="30sp"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:id="@+id/edit_bloodgroup"
                android:textAlignment="center"
                android:textColor="@color/colorRed"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGray"
                android:id="@+id/unit_bloodgroup"
                android:textAlignment="center"
                android:clickable="false"
                android:textStyle="italic"
                android:textSize="20sp"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:id="@+id/bloodPressure"
            android:orientation="vertical"
            android:layout_below="@+id/bloodGroup"
            android:layout_alignParentLeft="true"
            android:background="@drawable/edit_text_background"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:focusable="false"
            android:clickable="false"
            android:weightSum="3">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textAlignment="center"
                android:clickable="false"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text="B.P"
                android:background="@color/colorPrimaryDark"
                android:layout_weight="1"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="30sp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:clickable="false"
                android:id="@+id/edit_bloodpressure"
                android:textAlignment="center"
                android:textColor="@color/colorRed"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGray"
                android:textAlignment="center"
                android:clickable="false"
                android:textStyle="italic"
                android:textSize="20sp"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:id="@+id/hight"
            android:layout_below="@id/bloodPressure"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_text_background"
            android:layout_alignParentBottom="true"
            android:focusable="false"
            android:clickable="false"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            android:weightSum="3">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textAlignment="center"
                android:clickable="false"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text="HIGHT"
                android:background="@color/colorPrimaryDark"
                android:layout_weight="1"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="30sp"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:id="@+id/edit_hight"
                android:textAlignment="center"
                android:textColor="@color/colorRed"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGray"
                android:textAlignment="center"
                android:clickable="false"
                android:textStyle="italic"
                android:textSize="20sp"
                android:layout_weight="1"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>