<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/dash_board_layout"
    android:background="@color/colorBlack"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.extraterristrial.healthmanagementsystem.DashBoardActivity">
        <android.support.v7.widget.Toolbar android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorBlack"
        android:layout_alignParentBottom="true">
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/button_background"
        android:src="@mipmap/health_button"
        android:id="@+id/health_button"
        android:onClick="profiledetail"
        android:layout_marginLeft="2dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button_background"
            android:src="@mipmap/medicin_button"
            android:id="@+id/medicin_button"
            android:onClick="profiledetail"
            android:layout_marginLeft="16dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/health_button"
             />
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button_background"
            android:layout_marginLeft="16dp"
            android:src="@mipmap/vaccin_button"
            android:id="@+id/vaccin_button"
            android:onClick="profiledetail"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/medicin_button"
             />
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button_background"
            android:src="@mipmap/doctor_button"
            android:layout_marginLeft="16dp"
            android:id="@+id/doctor_button"
            android:onClick="profiledetail"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/vaccin_button"
            />
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button_background"
            android:src="@mipmap/medical_button"
            android:layout_marginLeft="16dp"
            android:id="@+id/medical_button"
            android:onClick="profiledetail"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/doctor_button"
             />
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button_background"
            android:src="@mipmap/diet_button"
            android:id="@+id/diet_button"
            android:layout_marginLeft="16dp"
            android:onClick="profiledetail"
            android:layout_marginRight="2dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</RelativeLayout>
